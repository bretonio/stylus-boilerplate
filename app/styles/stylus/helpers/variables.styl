*/

/* Basic Configuration */
$resetEnabled = true // allow a CSS rest to occur at the beginning of the resulting css file

/* Multipliers (used for ratios)
	TODO: Update with kouto's ratios
	@see: http://kouto-swiss.io/docs.html#modular-scale
*/
$multiplier = 1.3
$multiplierLarge = $multiplier * 2.1
$multiplierSmall = $multiplier / $multiplierLarge
$multiplierLargePercentage = $multiplierLarge * 10%

/* Grid */
$columns = 12 // you can extend grids with @extend $col-amount / ratio
$gridStyle = fluid // percentages, and not fixed widths

/* Type */
$fontURL = "http://fonts.googleapis.com/css?family=Open+Sans:400,300" // google font url.  Imported at type.styl

$unit = 1em // base unit for upsizing units (recommend em or rem)

/* Proportions */
$margin = $unit
$padding = $unit

// other padding variables such as $marginSmall, $paddingSmall and so forth: see helpers.styl

$baseFontSize = 100%
$baseFontFamily = font-stack("Segoe UI")
$headingFontFamily = $baseFontFamily
$fontSizeSmall = $unit / $multiplierSmall
$fontSizeMedium = $unit * $multiplier
$fontSizeLarge = $unit * $multiplierLarge
$fontSizeMini = $unit / $multiplierLarge
$lineHeight = 1.4
$headingFontWeight = 300
$baseFontWeight = 500
$borderRadius = ($unit / 3)
$borderRadiusSmall = $borderRadius / $multiplier
$borderRadiusLarge = $borderRadius * $multiplierLarge

/* Transitions*/
$transitionTime = 0.5s
$transitionFunction = ease

/* Animations */
$animationDuration = 1s
$animationTimingFunction = ease
$animationFillMode = both
$animationIterations = 1
$animationDirection = normal
$animationPlayState = running
$animationDelay = 2s

/* =============================================================================
Colours
========================================================================== */
$textColour = #000000
$inverseTextColour = invert($textColour)
$primaryColour = #00A0DF
$secondaryColour = rgba(253, 253, 253, 1)
$tertiaryColour = lighten($textColour, 96)
$bodyBackground = $inverseTextColour

/* Links */
$linkColour = luminosity($primaryColour) > 0.5 ? $primaryColour + 35 : $primaryColour - 35
$linkVisitedColour = $primaryColour

/* =============================================================================
Borders
========================================================================== */
$borderWidth = 1px
$borderStyle = solid
$borderColour = #CCC
$border = $borderWidth $borderStyle $borderColour

/* =============================================================================
Media query variables
========================================================================== */
$breakpointMain = only screen, max-width 767px
$breakpoint1080p = only screen, min-width 1920px
