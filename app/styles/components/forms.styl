$formSectionBorder ?= 1px solid #CCC
$formSectionMargin ?= 1em
$formSectionHeadingPadding ?= 1em

.form
	&-section
		border $formSectionBorder
		margin $formSectionMargin
		&-header
			padding $formSectionHeadingPadding
		&-label
			min-width 12em
			@extend $inline, $text-align-left
			&.text-label
				vertical-align top
	&-field
		padding $paddingMini $padding

	&-actions
		margin $margin 0
		@extend $text-align-center
		button
			@extend $block
			width 100%

input
	padding $paddingMini $padding
	@extend $bordered, $border-box
	font-size $unit
	+placeholder()
		color luminosity($textColour) > 0.5 ? $inverseTextColour + 35 : $inverseTextColour - 35

button
	padding $paddingMini $padding
	cursor pointer
	font-size $unit
