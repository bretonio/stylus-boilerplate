/*
	stylus-boilerplate

	animations/index.styl

	Author: Sean Goresht

	Animations, adapted from Dan Eden's animate.css
	@note Source adapted from Dan Eden's animate.css (with added placeholders for convenience)
	@see https://github.com/slang800/animate-stylus

	@example
		@require "components/animations/attention_seekers/shake
		.error
			@extend $callout, $callout--top-left, $shake
*/

/* Default animation (can be overriden) */
$defaultAnimation
	animation-duration $animationDuration
	backface-visibility visible !important
	animation-fill-mode $animationFillMode

generateAnimationPlaceholder(name)
	${name}
		@extend $defaultAnimation
		animation-name: name

//import the entire library

@import "**/*"
