doctype html
html.no-js(lang = "en")
	head
		block head
			block header-meta
				meta(charset = "utf-8")
				meta(http-equiv = "X-UA-Compatible", content = "IE=edge,chrome=1")
				title Stylus Boilerplate Demos and Styleguide - #{title}
				meta(name = "description", content = description)
				meta(name = "viewport", content = "width=device-width, initial-scale=1")
			block header-scripts
			block header-styles
				link(rel = "stylesheet", href = "../../styles/stylus-boilerplate.css")
				style(type="text/css").
					.demo {padding: 1em;}
	body(role="document")
		header(role="banner")
			block navigation
			block header
		.container
			main(role = "main")
				block content
			block footer
				footer.footer(role = "contentinfo")
					.footer-container
						small By&nbsp;
							a(href="http://seangoresht.com", title="Sean Goresht") Sean Goresht
			block scripts
